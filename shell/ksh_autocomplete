function reload_completions {
	if [ -r ~/.ksh_autocomplete ]; then
		. ~/.ksh_autocomplete
		echo "ksh completions reloaded"
	fi
}

# _1 means the first argument
set -A complete_make_1 -- install clean repackage reinstall
set -A complete_ssh_1 -- $(awk '$1 == "Host" {print $2}' ~/.ssh/config)
set -A complete_vmctl_1 -- console load reload start stop reset status
